<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reviews</title>
    <style>
        /* Add any additional styles here */
        input {
            width: 100%;
            box-sizing: border-box;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid black;
            padding: 8px;
            text-align: left;
        }

        /* Style for the Enter button */
        button.enter-button {
            background-color: green;
            color: white;
            padding: 8px 16px;
            border: none;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Reviews</h1>
    <a href='/'><button>Home</button></a>

    <table>
        <thead>
            <tr>
                <th>Review ID</th>
                <th>Client ID</th>
                <th>Building ID</th>
                <th>Rating</th>
                <th>Comments</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each reviews}}
                <tr>
                    <td>{{this.review_id}}</td>
                    <td>{{this.client_id}}</td>
                    <td>{{this.building_id}}</td>
                    <td>{{this.rating}}</td>
                    <td>{{this.comments}}</td>
                    <td><button class="Edit-button" onclick="submitHostData('edit')">Edit</button></td>
                    <td><button class="Delete-button" onclick="submitHostData('delete')">Delete</button></td>
                </tr>
            {{/each}}
            <!-- Add a single row for all input boxes and the Enter button -->
            <tr>
                <td>{{this.host_id}}</td>
                <td><input type="text" placeholder="Enter cliet ID"></td>
                <td><input type="text" placeholder="Enter building ID"></td>
                <td><input type="text" placeholder="Enter rating 1-5"></td>
                <td><input type="text" placeholder="Enter comment"></td>
                <td><button class="enter-button" onclick="submitHostData('new')">Enter</button></td>
            </tr>
        </tbody>
    </table>

    <script>
        function submitHostData(hostId) {
            // Handle the submission logic for Hosts here
            console.log('Submitting data for Host ID:', hostId);
        }
    </script>
</body>
</html>
